<div class="container">
  <div class="row">
    <h1 class="col-lg-12 text-center jumbotron"><img class="burger" src="../assets/images/burger.png" alt="burger"> Eat-Da-Burger! </h1>

    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <h2 class="text-center">Enjoy Das Burgers!</h2>

      <ol>
        {{#each burgers}}
          {{#if devoured}}
            {{> burgers/burger-block}}
          {{/if}}
        {{/each}}
      </ol>
    </div>

    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
      <h2 class="text-center">Devoured Burgers.</h2>
 
      <ol>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block}}
          {{/unless}}
        {{/each}}
      </ol>
    </div>

    <div class="col-lg-12  text-center"> 
      <h2>Add da burger</h2>
      <form class="create-form" action="api/burgers" method="POST">

        <div class="form-group">
          <label for="bu">Enter the Burger of Your Choice</label>
          <br>
          <input type="text" id="burg" name="fav_burger" style="width: 300px">
        </div>

        <img class="soda" src="../assets/images/soda.jpg" alt="soda"><button type="submit" class="btn btn-primary">Place Order</button><img class="fries" src="../assets/images/fries.png" alt="fries">
      </form>
  </div>
</div>